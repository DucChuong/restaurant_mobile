<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_Category_Order"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingTop="5dp"
        android:text="Category"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_ProductImage_Order"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="358dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_ProductName_Order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="Product Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_ProductPrice_Order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:text="Price"
                    android:textAlignment="viewStart"
                    android:textColor="#2196F3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_ProductDiscount_Order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_DecreaseProduct_Order"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20sp"
                app:cornerRadius="10dp" />

            <TextView
                android:id="@+id/text_ProductCount_Order"
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button_IncreaseProduct_Order"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="20sp"
                app:cornerRadius="10dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/text_ProductDescription_Order"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Description Content" />

    <RadioGroup
        android:id="@+id/radioGroup_ProductSize_Order"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton_ProductSizeS_Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:text="S"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton_ProductSizeM_Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="M"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton_ProductSizeL_Order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="false"
            android:text="L"
            android:textAlignment="center"
            android:textSize="20sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Description"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/text_CusmoterDescription_Order"
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:background="@drawable/textview_border"
        android:ems="10"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:minLines="3"
        android:padding="10dp"
        tools:text="Enter your description(If available)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_Cancel_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_Add_Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />
    </LinearLayout>
</LinearLayout>